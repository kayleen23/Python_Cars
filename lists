Cars = ["VW", "BMW", "Ford", "Mazda", "Tata"]
for myCars in Cars:
    if myCars == "Ford":
        continue#WILL SKIP FORD
    print(myCars)
Cars = ["VW", "BMW", "Ford", "Mazda", "Tata"]
bike = ["Susuki", "Kawasaki", "Honda", "Ducatti", "Vuka"]
for myCars in Cars:
    for myBikes in bike:
        print(myCars, myBikes) #adds bikes to cars in order

for i in range(1, 6, +1):
    print("* "*i)
for j in range(6,0, -1):
    print("*  "*j)
