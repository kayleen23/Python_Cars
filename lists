for varl in range(20, 1, -2):
    print(varl) #countdown loop starting (20 to stepping -2
else:
    print("enough with loops")
    Cars= ["VW", "BMW", "Ford", "Mazda", "Tata"]
    for myCars in Cars:
        print(myCars)
        if myCars=="Ford":
            break#it will stop at Ford
